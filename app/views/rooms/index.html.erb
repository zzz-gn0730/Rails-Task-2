<%= render "shared/header" %>

<div Class="main_container">

  <div class="list-title">
    <h3>List of facilities</h3>
  </div><br>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Introduction</th>
        <th>Fee</th>
        <th>Created date</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td class="align-middle">
            <% if room.avatar? %>
              <%= image_tag room.avatar_url, size: "130x80" %>
            <% else %>
              <%= image_tag "room-default-image.png", size: "130x80" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= link_to room.name, room_path(room), class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
          </td>
          <td class="align-middle">
            <%= room.detail %>
          </td>
          <td class="align-middle">
            <%= number_with_delimiter(room.fee) %></td>
          <td class="align-middle">
            <%= room.created_at.strftime("%Y/%m/%d") %>
          </td>
          <td class="align-middle">
            <%= link_to "Edit", edit_room_path(room), class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
          </td>
          <td class="align-middle">
            <%= link_to "Delete", room, method: :delete, class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/footer" %>