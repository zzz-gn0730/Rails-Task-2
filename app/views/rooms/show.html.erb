<%= render "shared/header" %>

<div class="main_container">
  <div class="container mt-3" style="max-width: 800px;">
    <div class="search mt-3 mb-5">
      <%= form_with url: search_index_path, method: :get, class: "d-flex justify-content-center" do %>
        <%= text_field_tag :query, params[:query], class: "form-control me-2", placeholder: "Search by room name or detail" %>
        <%= text_field_tag :location, params[:location], class: "form-control me-2", placeholder: "Search by location" %>
        <%= submit_tag "Search", class: "btn btn-outline-secondary" %>
      <% end %>
    </div>

    <div class="card">
      <% if @room.avatar_url.present? %>
        <%= image_tag @room.avatar_url, class: "card-img-top img-fluid" %>
      <% else %>
        <%= image_tag "room-default-image.png", class: "card-img-top img-fluid" %>
      <% end %>
    </div>

    <div class="card-body">
      <h5 class="card-title mt-3 mb-3">Facility details</h5>

      <div class="d-flex justify-content-between align-items-center md-3">
        <%= link_to "Back", :back, class: "link-dark" %>
        <% if @editable %>
          <%= link_to "Edit", edit_room_path(@room), class: "link-dark" %>
        <% end %>
      </div>

      <section class="mt-3">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <strong>Name of facility:</strong>
              <div><%= @room.name %></div>
            </div>
            <div class="form-group">
              <strong>Address:</strong>
              <div><%= @room.address %></div>
            </div>
            <div class="form-group">
              <strong>Fee:</strong>
              <div><%= number_with_delimiter(@room.fee) %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <strong>Introduction:</strong>
              <div><%= @room.detail %></div>
            </div>
            <div class="form-group">
              <strong>Created date:</strong>
              <div><%= @room.created_at.strftime("%Y/%m/%d") %></div>
            </div>
          </div>
        </div>
      </section>

      <section class="mt-3">
        <%= form_with model: @reservation, url: confirm_reservation_path do |f| %>
          <%= f.hidden_field :room_id, value: @room.id %>

          <div class="row">
            <div class="col">
              <div class="form-group">
                <%= f.label :check_in, "Check In"  %>
                <%= f.date_field :check_in, class: "form-control" %>
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.label :check_out, "Check Out"  %>
                <%= f.date_field :check_out, class: "form-control" %>
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.label :num, "Number of people"  %>
                <%= f.number_field :num, class: "form-control", min: 1 %>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 mt-5">
            <%= f.submit "Confirmation Screen", class: "btn btn-outline-secondary" %>
            <%= link_to "cancel", request.original_url, class: "btn btn-outline-secondary mt-2" %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
