<%= render "shared/header" %>

<div class="container-sm">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-text-color card-header">
          <h2 class="card-title text-center">Login To Your Account</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: new_user_session_path do |f| %>

            <div class="form-group">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mt-3 d-flex align-items-center">
                <%= f.check_box :remember_me, class: "me-2" %>
                <%= f.label :remember_me, class: "checkbox-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2 col-6 mx-auto mt-3 mb-3">
              <%= f.submit "Log in", class: "btn btn-sm  btn-outline-secondary"  %>
            </div>
          <% end %>

          <div class="text-center">
            <p class="mt-4">* If you do not have an account, please create one</p>
            <%= link_to "Sign up", new_user_registration_path, class: "d-grid gap-2 col-6 mx-auto mb-3 btn btn-sm  btn-outline-secondary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>