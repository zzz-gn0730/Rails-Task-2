<div class="header d-flex align-items-center">
  <h1 class="me-auto"><%= link_to 'Reservation App', root_path, class: "title" %></h1>

  <% if user_signed_in? %>
    <div class="dropdown">
      <button class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      <% if current_user.avatar.present? %>
        <%= image_tag current_user.avatar.url %>
      <% else %>
        <%= image_tag "default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png", size: "40x40" %>
      <% end %>
      <%= current_user.name %>
      </button>
      <ul class="btn btn-secondary dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li>
          <%= link_to "New registration of facility", new_room_path, class: "dropdown-item" %>
        </li>
        <li>
          <%= link_to "Booking list", reservations_path, class: "dropdown-item" %>
        </li>
        <li>
          <%= link_to "Reservation list", rooms_path, class: "dropdown-item" %>
          </li>
        <li>
          <%= link_to "Action", user_path(current_user), class: "dropdown-item" %>
        </li>
        <li>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
        <li>
          <%= link_to "Back to main page", root_path, class: "dropdown-item"  %>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="me-4">
      <%= link_to "Sign up", new_user_registration_path, class: "link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover link-no-underline" %>
    </div>
    <div class="me-2">
      <%= link_to "Sign in", new_user_session_path, class: "link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover link-no-underline" %>
    </div>
  <% end %>
</div>
