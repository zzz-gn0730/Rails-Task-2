<%= render "shared/header" %>

<div class="container-sm" style="margin-bottom: 160px;">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-text-color card-header">
          <h1 class="card-title text-center">Edit Profile</h1>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="row mb-3 justify-content-center">
              <div class="col text-start">
                <%= link_to "Account", user_path(current_user), class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
              </div>
              <div class="col text-end">
                <%= link_to "Profile", profile_path, class: "link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
              </div>
            </div>
          </div>

          <%= form_for current_user, url: user_path, method: :patch, html: { multipart: true } do |f| %>
            <div class="form-group">
              <%= f.label :avatar, class: "form-label" %><br>
              <%= f.file_field :avatar, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :name, class: "form-label" %><br>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :bio, class: "form-label" %><br>
              <%= f.text_area :bio, class: "form-control" %>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto mt-3 mb-3">
              <%= f.submit 'Save', class: "btn btn-sm  btn-outline-secondary"  %>
              <%= link_to 'Cancel', profile_path, class: "btn btn-sm  btn-outline-secondary mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>